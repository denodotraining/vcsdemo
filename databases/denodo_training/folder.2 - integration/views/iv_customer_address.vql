CREATE OR REPLACE VIEW iv_customer_address FOLDER = '/2 - integration' AS SELECT bv_wo_customer.id, bv_wo_customer.customer_code_internal, bv_wo_customer.first_name, bv_wo_customer.last_name, bv_wo_customer.email, bv_wo_customer.phone, bv_wo_customer.registered_date, register(bv_wo_customer.main_address, bv_wo_customer.main_postcode, bv_wo_customer.main_country) AS address FROM bv_wo_customer;

ALTER VIEW iv_customer_address
 LAYOUT (bv_wo_customer = [20, 20, 200, 200]);

