CREATE OR REPLACE VIEW iv_customer_orders FOLDER = '/2 - integration' AS SELECT bv_wo_orders.customer_code, bv_wo_orders.status, bv_wo_orders.date_placed, bv_wo_orders.date_delivered, bv_wo_orders.date_closed, bv_wo_order_item.order_id, bv_product.productid, bv_product.productname, bv_product.productprice, bv_product.category, bv_product.characteristics, bv_wo_customer.first_name, bv_wo_customer.last_name, bv_wo_customer.email, bv_wo_customer.phone, bv_wo_customer.main_address, bv_wo_customer.main_postcode, bv_wo_customer.main_country, bv_wo_customer.registered_date FROM ((bv_wo_orders AS bv_wo_orders INNER JOIN bv_wo_order_item AS bv_wo_order_item ON bv_wo_orders.id = bv_wo_order_item.order_id ) INNER JOIN bv_product AS bv_product ON bv_wo_order_item.product_id = bv_product.productid ) INNER JOIN bv_wo_customer AS bv_wo_customer ON bv_wo_orders.customer_code = bv_wo_customer.customer_code_internal ;

